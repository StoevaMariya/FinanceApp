@using FinanceApp.Models
@model IEnumerable<FinanceApp.Models.Transaction>

@{
    ViewData["Title"] = "Transactions History";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white fw-bold text-center">
        <i class="bi bi-list-ul"></i> Transactions History
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Currency</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.Type == TransactionType.Income)
                            {
                                <span class="text-success fw-bold">
                                    <i class="bi bi-arrow-up-circle"></i> Income
                                </span>
                            }
                            else
                            {
                                <span class="text-danger fw-bold">
                                    <i class="bi bi-arrow-down-circle"></i> Expense
                                </span>
                            }
                        </td>
                        <td>@item.Category?.Name</td>
                        <td>@item.Currency</td>
                        <td>@item.Amount.ToString("0.00")</td>
                        <td>@item.Description</td>
                        <td class="text-center">
                            <a asp-controller="Transactions"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-controller="Transactions"
                                  asp-action="Delete"
                                  asp-route-id="@item.Id"
                                  method="post"
                                  style="display:inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex gap-3">
    <a asp-controller="Transactions" asp-action="Create" asp-route-type="Income"
       class="btn btn-outline-primary">💰 Add Income</a>

    <a asp-controller="Transactions" asp-action="Create" asp-route-type="Expense"
       class="btn btn-outline-success">💰 Add Expense</a>
</div>
