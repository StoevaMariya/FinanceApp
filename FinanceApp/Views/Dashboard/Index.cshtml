@using FinanceApp.Models
@model IEnumerable<FinanceApp.Models.Transaction>

@{
    ViewData["Title"] = "Transactions History";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white fw-bold text-center">
        <i class="bi bi-list-ul"></i> Transactions History
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Currency</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    @* подсигури се, че сравняваш enum към enum *@
                    var isIncome = item.Type == TransactionType.Income;
                    var iconHtml = isIncome
                    ? "<i class=\"bi bi-arrow-up-circle text-success\"></i>"
                    : "<i class=\"bi bi-arrow-down-circle text-danger\"></i>";

                    <tr>
                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        <td>@Html.Raw(iconHtml) @item.Type</td>
                        <td>@item.Category?.Name</td>
                        <td>@item.Currency</td>
                        <td>@item.Amount.ToString("0.00")</td>
                        <td>@item.Description</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="d-flex gap-3">
    <a asp-controller="Transactions" asp-action="Create" class="btn btn-outline-primary" asp-route-type="Income"> 💰Add Income</a>
    <a asp-controller="Transactions" asp-action="Create" class="btn btn-outline-success" asp-route-type="Expense">💰 Add expense</a>
</div>
