@model FinanceApp.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="card shadow-sm p-4 mt-4">
    <h2 class="text-center text-danger mb-4">Delete Transaction</h2>

    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i>
        Are you sure you want to delete this transaction?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category?.Name</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-3">Currency</dt>
        <dd class="col-sm-9">@Model.Currency</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">@Model.Amount</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>
