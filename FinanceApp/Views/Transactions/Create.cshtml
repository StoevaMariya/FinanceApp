@model FinanceApp.Models.Transaction

<div class="card shadow-sm mt-4">
    <div class="card-header bg-info text-white fw-bold text-center">
        @ViewBag.Type
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="Type" value="@ViewBag.Type" />

            <div class="row mb-3">
                <div class="col">
                    <label asp-for="CategoryId" class="form-label">Category</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
                </div>
                <div class="col">
                    <label asp-for="Date" class="form-label">Date</label>
                    <input asp-for="Date" type="date" class="form-control" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <label asp-for="Currency" class="form-label">Currency</label>
                    <select asp-for="Currency" class="form-select">
                        <option value="BGN">BGN</option>
                        <option value="EUR">EUR</option>
                        <option value="USD">USD</option>
                    </select>
                </div>
                <div class="col">
                    <label asp-for="Amount" class="form-label">Amount</label>
                    <input asp-for="Amount" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Add a note..."></textarea>
            </div>

            <button type="submit" class="btn btn-success">Save</button>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
